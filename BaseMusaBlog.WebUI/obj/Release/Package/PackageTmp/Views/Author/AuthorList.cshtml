@model IEnumerable<BaseMusaBlog.EntityLayer.Concrete.Author>
@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Yazarlar</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
</div>
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="card card-solid">
                <div class="card-body pb-0">
                    <div class="row d-flex align-items-stretch">
                        @foreach (var item in Model)
                        {
                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                                <div class="card bg-light">
                                    <div class="card-header text-muted border-bottom-0">
                                        @item.AuthorTitle
                                    </div>
                                    <div class="card-body pt-0">
                                        <div class="row">
                                            <div class="col-7">
                                                <h2 class="lead"><b>@item.AuthorName</b></h2>
                                                <p class="text-muted text-sm"><b>Hakkımda:</b>@item.AuthorAboutShort </p>
                                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span>@item.EmailAddress</li>
                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>@item.PhoneNumber</li>
                                                </ul>
                                            </div>
                                            <div class="col-5 text-center">
                                                <img src="@item.AuthorImage" alt="" class="img-circle img-fluid">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="text-right">
                                            <a href="/Blog/AuthorBlogList/@item.AuthorID" class="btn btn-sm bg-teal">
                                                <i class="fas fa-comments"></i> Yazarın Blogları
                                            </a>
                                            <a href="/Author/AuthorEdit/@item.AuthorID" class="btn btn-sm btn-primary">
                                                <i class="fas fa-user"></i> Profili Düzenle
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
<a href="/Author/AddAuthor/" class=" btn btn-info btn-sm">Yeni Yazar Girişi</a>

