@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>TruebLoGs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <img src="~/miniblog/images/musa-logo.png"
                     alt="AdminLTE Logo"
                     class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <h3 style="color: mediumvioletred" class="brand-text font-weight-light">TruebLoGs</h3>
                <h5 style="color: mediumvioletred" class="brand-text font-weight-light">Admin Paneli</h5>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/miniblog/images/musa-logo.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block" style="color:cadetblue">Hoş Geldiniz</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/Category/AdminCategoryList/" class="nav-link">
                                <i class="nav-icon fas fa-box-tissue"></i>
                                <p>
                                    Kategoriler
                                </p>
                            </a>
                        </li>                      
                            <li class="nav-item">
                                <a href="/Blog/AdminBlogList2/" class="nav-link">
                                    <i class="nav-icon fas fa-blog"></i>
                                    <p>
                                        Bloglar
                                    </p>
                                </a>
                            </li>                       
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-bar"></i>
                                <p>
                                    Grafikler
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Chart/Index/" class="nav-link">
                                        <i class="right fas fa-chart-pie"></i>
                                        <p>Statik Grafik</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Chart/BlogRaitingList/" class="nav-link">
                                        <i class="right fas fa-chart-pie"></i>
                                        <p>Pie Grafik</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Chart/BlogRaitingList2/" class="nav-link">
                                        <i class="right fas fa-chart-bar"></i>
                                        <p>Column Grafik</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Chart/BlogRaitingList3/" class="nav-link">
                                        <i class="right fas fa-chart-line"></i>
                                        <p>Line Grafik</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-comment-dots"></i>
                                <p>
                                    Yorumlar
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Comment/AdminCommentListTrue/" class="nav-link">
                                        <i class="far fa-comment-alt nav-icon"></i>
                                        <p>Yayınlanan Yorumlar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Comment/AdminCommentListFalse/" class="nav-link">
                                        <i class="far fa-comment nav-icon"></i>
                                        <p>Kaldırılan Yorumlar</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="/Author/AuthorList/" class="nav-link">
                                <i class="nav-icon fas fa-people-arrows"></i>
                                <p>
                                    Yazarlar
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="../widgets.html" class="nav-link">
                                <i class="nav-icon fas fa-user-times"></i>
                                <p>
                                    Yetkilendirme
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/About/UpdateAbout/" class="nav-link">
                                <i class="nav-icon fas fa-address-card"></i>
                                <p>
                                    Hakkımızda
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Contact/InBox/" class="nav-link">
                                <i class="nav-icon fas fa-phone-alt"></i>
                                <p>
                                    İletişim
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Login/AdminLogin/" class="nav-link">
                                <i class="nav-icon fas fa-arrow-right text-danger"></i>
                                <p style="color:red;">
                                    Çıkış Yap
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>

