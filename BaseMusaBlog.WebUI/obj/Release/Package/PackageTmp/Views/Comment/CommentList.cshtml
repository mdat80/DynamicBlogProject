@model IEnumerable<BaseMusaBlog.EntityLayer.Concrete.Comment>
<div class="pt-5">
    <h3 class="mb-5" style="color:brown">Blog için yapılan yorumlar</h3>
    <ul class="comment-list">
        @foreach (var item in Model)
        {
            <li class="comment">
                <div class="vcard">
                    <img src="~/miniblog/images/1.png" alt="Image placeholder">
                </div>
                <div class="comment-body">
                    <h3>@item.UserName</h3>
                    <div>@(((DateTime)item.CommentDate).ToString("dd/MMM/yyyy"))</div>
                    <p>@item.CommentText</p>
                </div>
            </li>
        }
        </ul>
    @*partial içinde partial CommentList.cshtml*@
    @*Yeni yorum*@
    @Html.Action("LeaveComment", "Comment")
</div>
