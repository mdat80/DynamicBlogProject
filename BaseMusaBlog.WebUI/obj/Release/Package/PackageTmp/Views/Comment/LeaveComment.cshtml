<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yapın</h3>
    <form method="post" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Kullanıcı Adınız</label>
            <input type="text" class="form-control" name="UserName" required="">
        </div>
        <div class="form-group">
            <label for="email">Email Adresiniz</label>
            <input type="email" class="form-control" name="Mail" required="">
        </div>
        <input type="hidden" value="@DateTime.Now.ToShortDateString()" class="form-control" name="CommentDate" required="">
        <input type="hidden" value="@ViewBag.Id" class="form-control" name="BlogID" required="">
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea name="CommentText" cols="30" rows="10" class="form-control" required=""></textarea>
        </div>

        <div class="form-group" style="background-color:bisque;padding:4px;border-radius:5px;
font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">
            <label style="color:dodgerblue;font-weight:bold" for="message">Blog Puanınız: </label>
            <label>@Html.RadioButton("BlogRaiting", 1)1</label>
            <label>@Html.RadioButton("BlogRaiting", 2)2</label>
            <label>@Html.RadioButton("BlogRaiting", 3)3</label>
            <label>@Html.RadioButton("BlogRaiting", 4)4</label>
            <label>@Html.RadioButton("BlogRaiting", 5)5</label>
            <label>@Html.RadioButton("BlogRaiting", 6)6</label>
            <label>@Html.RadioButton("BlogRaiting", 7)7</label>
            <label>@Html.RadioButton("BlogRaiting", 8)8</label>
            <label>@Html.RadioButton("BlogRaiting", 9)9</label>
            <label>@Html.RadioButton("BlogRaiting", 10)10</label>
        </div>

        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn btn-primary">
        </div>
    </form>
</div>
