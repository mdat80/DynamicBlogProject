@model IEnumerable<BaseMusaBlog.EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Bloglar</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
</div>
    <br />
    <table class="table table-dark table-sm">
        <tr style="font-family:Britannic;color:burlywood">
            <th>Kategori</th>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Yayınlama Tarihi</th>
            <th>Detaylar</th>
            <th>Yorumlar</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr style="color:cadetblue">
                <td>@item.Category.CategoryName</td>
                <td>@item.BlogTitle</td>
                <td>@item.Author.AuthorName</td>
                <td>@item.BlogDate.ToString("dd/MMM/yyyy")</td>
                <td><a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-outline-primary">Detaylar</a></td>
                <td><a href="/Blog/GetCommentByBlog/@item.BlogID" class="btn btn-outline-info">Yorumlar</a></td>
                <td><a href="/Blog/UpdateBlog/@item.BlogID" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a href="/Blog/RemoveBlog/@item.BlogID" class="btn btn-outline-danger">Sil</a></td>
            </tr>
        }
    </table>
    <a href="/Blog/AddNewBlog/" class="btn btn-success">Yeni Blog</a>
