@model IEnumerable<BaseMusaBlog.EntityLayer.Concrete.Author>

<div class="tab-pane" id="settings">
    @using (Html.BeginForm("UpdateAuthorProfile", "User", FormMethod.Post))
    {
        foreach (var item in Model)
        {
            <form class="form-horizontal">
                <div class="form-group row">
                    <label for="inputName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input style="display:none" type="text" value="@item.AuthorID" class="form-control" name="AuthorID">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>
                    <div class="col-sm-10">
                        <input type="text" value="@item.AuthorName" class="form-control" name="AuthorName">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail" class="col-sm-2 col-form-label">Email Adres</label>
                    <div class="col-sm-10">
                        <input type="email" value="@item.EmailAddress" class="form-control" name="EmailAddress" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputName2" class="col-sm-2 col-form-label">Meslek</label>
                    <div class="col-sm-10">
                        <input type="text" value="@item.AuthorTitle" class="form-control" name="AuthorTitle">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputExperience" class="col-sm-2 col-form-label">Yetenekler</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@item.AuthorAboutShort" name="AuthorAboutShort">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputSkills" class="col-sm-2 col-form-label">Telefon</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@item.PhoneNumber" name="PhoneNumber">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputSkills" class="col-sm-2 col-form-label">Profil Resmi</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@item.AuthorImage" name="AuthorImage">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@item.Password" name="Password">
                    </div>
                </div>             
                <div class="form-group row">
                    <label for="inputSkills" class="col-sm-2 col-form-label">Hakkımda</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@item.AuthorAbout" name="AuthorAbout">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                        <div class="checkbox">
                            <label><input type="checkbox"> Şifremi değiştirmek istiyorum</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                        <button type="submit" class="btn btn-info">Güncelle</button>

                    </div>
                </div>
            </form>
        }
    }
</div>