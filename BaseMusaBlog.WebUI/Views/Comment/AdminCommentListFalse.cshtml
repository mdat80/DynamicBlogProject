@model IEnumerable<BaseMusaBlog.EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "AdminCommentListFalse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Kaldırılan Yorumlar</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
    </div>
    <br />
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="card-body">
                    @foreach (var item in Model)
                    {
                        <div class="post">
                            <div class="user-block">
                                <img class="img-circle img-bordered-sm" src="~/miniblog/images/user.jpg" />
                                <span class="username">
                                    <a href="#">@item.UserName - @item.Blog.BlogTitle</a>
                                </span>
                                <span class="description">@item.CommentDate.ToString("dd/MMM/yyyy")</span>
                            </div>
                            <p>
                                @item.CommentText
                            </p>
                            <p>
                                <span class="float-right">
                                    <a href="/Comment/StatusToChangeToTrue/@item.CommentID" class="text-success">
                                        <i class="fa fa-check mr-2"></i> Yorumu Onayla
                                    </a>
                                </span>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>



